<!DOCTYPE html>
<html>
    <head>
        <title>Resultados Aleatorios IMC</title>
        <meta charset="utf-8" />
    </head>
    <body>
        <h1>Resultado</h1>
        <div class="seccion_1" id="s1">
            <table class="table-bordered">
                <tr>
                    <th> Id</th>
                    <th> Nombre</th>
                    <th> Peso</th>
                    <th> Estatura</th>
                    <th> IMC</th>
                </tr>

                <tr>
                    <td>Fila 1, Columna 1</td>
                    <td>Fila 1, Columna 2</td>
                    <td>Fila 1, Columna 3</td>
                </tr>

                <tr>
                    <td>Fila 2, Columna 1</td>
                    <td>Fila 2, Columna 2</td>
                    <td>Fila 2, Columna 3</td>
                </tr>
            </table>
            <hr />
        </div>

        <div class="seccion_2" id="s2">
            <ul>
                <li>Elemento 1</li>
                <li>Elemento 2</li>
                <li>Elemento 3</li>
            </ul>
            <hr />
        </div>

        <div class="seccion_3" id="s3">
            <input type="button" value="Soy un Boton" /><hr />
            <a class="btn btn-info">Soy un link que parece boton</a>
        </div>

        <div class="seccion_4">
            @if (ViewBag.IMC > 20)
            {
                <div class="text-success">
                    <p>Mensaje</p>
                </div>
            }
            else
            {
                <div class="text-danger">
                    <p>Otro mensaje</p>
                </div>
            }
        </div>
    </body>
</html>
